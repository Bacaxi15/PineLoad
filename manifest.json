{
  "manifest_version": 3,
  "name": "PineLoad",
  "version": "0.3.0",
  "description": "Baixa vídeos do YouTube com qualidade selecionável usando yt-dlp",
  "action": {
    "default_popup": "index.html",
    "default_title": "PineLoad v0.3.0"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "<all_urls>"
  ]
}